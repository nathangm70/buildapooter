                    <td>
                        <form action="/buildAPooter" method="post">
                            <input type="hidden" value="Power Supply" name="search">
                            <input type="submit" value="Select">
                        </form>
                    </td>
				</tr>
                <tr>
                    <td>Processor</td>
                    <td><% if(processor){ %>
                        <img src="<%= processor.smallImage %>" style="float: left"/> <%= processor.partName %><br><%= processor.price %>
                        <% } %></td>
                    <td>
                        <form action="/buildAPooter" method="post">
                            <input type="hidden" value="Processor" name="search">
                            <input type="submit" value="Select">
                        </form>
                    </td>
                </tr>

			</table>
            <h1 class="sub">Select your peripherals:</h1>
            <div id="parts">
                <table align="center">
                    <tr>
                        <td>Monitor</td>
                        <td><% if(monitor){ %>
                            <img src="<%= monitor.smallImage %>" style="float: left"/> <%= monitor.partName %><br><%= monitor.price %>
                            <% } %></td>
                        <td>
                            <form action="/buildAPooter" method="post">
                                <input type="hidden" value="Monitor" name="search">
                                <input type="submit" value="Select">
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>Keyboard</td>
                        <td><% if(keyboard){ %>
                            <img src="<%= keyboard.smallImage %>" style="float: left"/> <%= keyboard.partName %><br><%= keyboard.price %>
                            <% } %></td>
                        <td>
                            <form action="/buildAPooter" method="post">
                                <input type="hidden" value="Keyboard" name="search">
                                <input type="submit" value="Select">
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>Webcam</td>
                        <td><% if(webcam){ %>
                            <img src="<%= webcam.smallImage %>" style="float: left"/> <%= webcam.partName %><br><%= webcam.price %>
                            <% } %></td>
                        <td>
                            <form action="/buildAPooter" method="post">
                                <input type="hidden" value="Webcam" name="search">
                                <input type="submit" value="Select">
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>Headset</td>
                        <td><% if(headset){ %>
