        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
              integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ=="
              crossorigin="anonymous">
        <link rel="stylesheet" href="../stylesheets/main.css">
	</head>
	<body>

        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Build-A-Pooter</a>
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/">Home<span class="sr-only">(current)</span></a></li>
                        <li  class="active"><a href="/buildAPooter">Build</a></li>
                        <li><a href="/builds">Saved Builds</a></li>
                        <li><a href="/about">About</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/login">Login</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span> Username <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Profile</a></li>
                                <li><a href="#">Saved Builds</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Sign Out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="page-header">
            <div class="container">
                <h1><a href="/">Build-A-Pewter</a></h1>
            </div>
        </div>

            <% if(items) { %>
            <% for(var i = 0; i < items.length; i++) { %>
        <div class="submit_div container" style="max-width:800px">
        <table class="table table-hover">
            <tr>
                <form method="post" action="itemDisplay">
                    <td class="imageSize"><img id="imgHover" src="<%= items[i].smallImage %>" data-thumbnail-sml="<%= items[i].smallImage %>" data-thumbnail-med="<%= items[i].mediumImage %>"/></td>
                    <td><p><%= items[i].title %></p></td>
                    <td class="price"><p><%= items[i].price %></p></td>

                    <input type="hidden" value="<%= JSON.stringify(items[i]) %>" name="selectedPart">
                    <input type="hidden" value="<%= part %>" name="parttype">
                </form>
            </tr>
        </table>
        </div>
            <% } %>
            <% } %>

                <script>
                    $(".submit_div").click(function(){
                        $(this).find('form').submit();
                    });

                    $("img#imgHover").hover(function(){
                        $(this).attr("src", $(this).attr("data-thumbnail-med"));},
                        function(){
                            $(this).attr("src", $(this).attr("data-thumbnail-sml"));
                    });
                </script>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"
            integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ=="
            crossorigin="anonymous"></script>
	</body>
