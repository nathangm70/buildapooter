<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
		<title>Build-A-Pooter</title>
		<link rel="stylesheet" href="../stylesheets/main.css">
		<script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
	</head>
	<body>
        <div id="wrapper">
            <div id="navWrap">
                <% include templates/navbar.ejs %>
            </div>
            <div id="container">
                <% if(items) { %>

                <% for(var i = 0; i < items.length; i++) { %>
                <div style="border: solid thick black" class="submit_div">
                    <form method="post" action="itemDisplay">
                        <p><%= items[i].title %></p>
                        <img src="<%= items[i].mediumImage %>" />
                        <p><%= items[i].price %></p>
                        <input type="hidden" value="<%= JSON.stringify(items[i]) %> " name="selectedPart">
                        <input type="hidden" value="<%= part %>" name="parttype">

                    </form>
                </div>

                <% } %>
                <% } %>
                <script>
                    $(".submit_div").click(function(){
                        $("form").submit();
                    });
                </script>
            </div>
        </div>
	</body>
</html>

